{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Clean Configure (Windows-UCRT64)",
      "type": "shell",
      "command": "rm -rf build && cmake --preset windows-debug",
      "options": {
        "shell": {
          "executable": "C:/msys64/usr/bin/bash.exe",
          "args": ["-i", "-c"]
        },
        "env": {
          "MSYSTEM": "UCRT64",
          "CHERE_INVOKING": "1",
          "PATH": "C:/msys64/ucrt64/bin;C:/msys64/usr/bin"
        }
      }
    },

    {
      "label": "Build (Windows-UCRT64)",
      "type": "shell",
      "command": "cmake --build --preset windows-debug",
      "group": "build",
      "options": {
        "shell": {
          "executable": "C:/msys64/usr/bin/bash.exe",
          "args": ["-i", "-c"]
        },
        "env": {
          "MSYSTEM": "UCRT64",
          "CHERE_INVOKING": "1",
          "PATH": "C:/msys64/ucrt64/bin;C:/msys64/usr/bin"
        }
      }
    },

    {
      "label": "Full Rebuild (Windows-UCRT64)",
      "dependsOn": [
        "Clean Configure (Windows-UCRT64)",
        "Build (Windows-UCRT64)"
      ],
      "dependsOrder": "sequence"
    }
  ]
}